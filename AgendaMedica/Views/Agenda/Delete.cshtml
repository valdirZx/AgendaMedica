@model AgendaMedica.Models.Agenda

@{
    ViewData["Title"] = "Deletar Agendamento";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow-lg rounded-4">
        <div class="card-body p-5 text-center">
            <h2 class="mb-3 text-danger fw-bold">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Deletar Agendamento
            </h2>
            <p class="lead mb-4">Tem certeza que deseja excluir este agendamento?</p>

            <div class="border-top border-bottom py-3 my-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-3 fw-bold">Paciente</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Paciente.Nome)</dd>

                    <dt class="col-sm-3 fw-bold">Médico</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Medico.Nome)</dd>

                    <dt class="col-sm-3 fw-bold">Data da Consulta</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataConsulta)</dd>

                    <dt class="col-sm-3 fw-bold">Status</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="AgendaId" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-3">
                    Confirmar Exclusão
                </button>

                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    Voltar para Agenda
                </a>
            </form>
        </div>
    </div>
</div>