@model AgendaMedica.Models.Medico

@{
    ViewData["Title"] = "Excluir Médico";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow-lg rounded-4">
        <div class="card-body p-5 text-center">
            <h2 class="mb-3 text-danger fw-bold">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Excluir Médico
            </h2>
            <p class="lead mb-4">Tem certeza que deseja excluir este médico?</p>

            <div class="border-top border-bottom py-3 my-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CRM)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CRM)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Celular)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Celular)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Especialidade)</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Especialidade.Nome)
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MedicoId" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-3">
                    Confirmar Exclusão
                </button>

                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    Voltar para Lista
                </a>
            </form>
        </div>
    </div>
</div>